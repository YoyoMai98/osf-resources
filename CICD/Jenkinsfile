pipeline {
    agent any

    stages {
        stage("build") {
            steps {
                echo "build stage..."
                dir("CICD"){
                    jdk = tool name: 'JDK17'
                    env.JAVA_HOME = "${jdk}"
                    echo "jdk installation path is: ${jdk}"
                    sh "${jdk}/bin/java -version"
                    sh "java -version"
                    sh "./mvnw clean install -DskipTests"
                }
            }
        }

        stage("test") {
            tools {
                jdk "jdk-18"
            }
            steps {
                echo "build stage..."
                dir("CICD"){
                    sh "ls -al"
                    sh "./mvnw test"
                }
            }
        }

        stage("deploy") {
            steps {
                echo "build stage..."
            }
        }
    }
}