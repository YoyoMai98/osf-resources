pipeline {
    agent any
    tools {
        jdk "jdk-18"
    }
    stages {
        stage("build") {
            steps {
                echo "build stage..."
                dir("CICD"){
                    sh "java -version"
                    sh "./mvnw clean install -DskipTests"
                }
            }
        }

        stage("test") {
            tools {
                jdk "jdk-18"
            }
            steps {
                echo "build stage..."
                dir("CICD"){
                    sh "ls -al"
                    sh "./mvnw test"
                }
            }
        }

        stage("deploy") {
            steps {
                echo "build stage..."
            }
        }
    }
}