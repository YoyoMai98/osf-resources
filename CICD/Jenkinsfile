pipeline {
    agent any

    stages {
        stage("build") {
            env.JAVA_HOME="${tool 'jdk-18'}"
            env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
            sh 'java -version'
            steps {
                echo "build stage..."
                dir("CICD"){
                    sh "java -version"
                    sh "./mvnw clean install -DskipTests"
                }
            }
        }

        stage("test") {
            tools {
                jdk "jdk-18"
            }
            steps {
                echo "build stage..."
                dir("CICD"){
                    sh "ls -al"
                    sh "./mvnw test"
                }
            }
        }

        stage("deploy") {
            steps {
                echo "build stage..."
            }
        }
    }
}