pipeline {
    agent any

    stages {
        stage("build") {
            steps {
                env.JAVA_HOME="${tool 'jdk-18'}"
                env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
                sh 'java -version'
                echo "build stage..."
                dir("CICD"){
                    sh "java -version"
                    sh "./mvnw clean install -DskipTests"
                }
            }
        }

        stage("test") {
            steps {
                env.JAVA_HOME="${tool 'jdk-18'}"
                env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
                sh 'java -version'
                echo "build stage..."
                dir("CICD"){
                    sh "ls -al"
                    sh "./mvnw test"
                }
            }
        }

        stage("deploy") {
            steps {
                echo "build stage..."
            }
        }
    }
}